<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.EmployeeDetailActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_100"
            android:id="@+id/ivEmployee"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_employee"/>

    <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_25"
            android:text="Style"
            app:layout_constraintTop_toBottomOf="@+id/ivEmployee"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/t_26"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tvEmployeeAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m_5"
            app:layout_constraintTop_toBottomOf="@+id/tvEmployeeName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/m_20"
            android:textSize="@dimen/t_18"
            android:textStyle="italic"/>

    <TextView
            android:id="@+id/tvEmployeeSalary"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/m_20"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmployeeAge"
            android:hint="Select"
            android:textSize="@dimen/t_18"
            android:textStyle="italic"/>

</androidx.constraintlayout.widget.ConstraintLayout>