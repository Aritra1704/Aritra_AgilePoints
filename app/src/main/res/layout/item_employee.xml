<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvBeer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_2"
        android:elevation="@dimen/m_5">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/m_10">

        <ImageView
                android:layout_width="@dimen/m_40"
                android:layout_height="@dimen/m_40"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/m_10"
                android:id="@+id/ivEmployee"
                android:src="@drawable/ic_employee"/>

        <LinearLayout
                android:id="@+id/llEmployee"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/ivEmployee"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvEmployeeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:text="Style"
                    android:textSize="@dimen/t_16"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tvEmployeeAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_5"
                    android:maxLength="20"
                    android:hint="Select"
                    android:textSize="@dimen/t_14"
                    android:textStyle="italic"/>
        </LinearLayout>


        <TextView
                android:id="@+id/tvEmployeeSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llEmployee"
                android:layout_toRightOf="@+id/ivEmployee"
                android:hint="Select"
                android:textSize="@dimen/t_14"
                android:textStyle="italic"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>